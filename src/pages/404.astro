---
import Layout from '../layouts/Layout.astro';
import Navegacion from '../components/navegacion.astro';
---

<Layout title="PÃ¡gina no encontrada">
	<Navegacion></Navegacion>
    <main>
        <h1 class="text-gradient">Estamos trabajando desaparece!</h1>
		<div>
			<img src="/Jesusmp.svg" id="imagen1" alt="y que?" />
        	<img src="/mpd.svg" alt="y?" id="imagen2">
		</div>
    </main>
</Layout>

<style>
    main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
	
	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}

	@media screen and (max-width:600px){
		h1 {
			font-size: 2rem;
			font-weight: 700;
			line-height: 1;
			text-align: center;
			margin-bottom: 1em;
		}
	}
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	div{
		display: grid;
		grid-template-columns: auto auto;
		grid-template-rows: min-content;
	}
	
    img {
        margin: auto;
        position: flex;
        padding: 1%;
    }
    img#imagen1 {
        width: 75%;
        height: auto;
    }
    img#imagen2 {
        width:35%;
        height: auto;
    }

</style>